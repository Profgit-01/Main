#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of data points: ";
    cin >> n;

    double x[20], y[20][20]; // y[i][j] stores j-th order difference for x[i]

    cout << "\nEnter the values of x:\n";
    for (int i = 0; i < n; i++)
        cin >> x[i];

    cout << "\nEnter the corresponding values of f(x):\n";
    for (int i = 0; i < n; i++)
        cin >> y[i][0]; // first column is f(x)

    // ---------- Construct Finite Difference Table ----------
    for (int j = 1; j < n; j++) {
        for (int i = 0; i < n - j; i++) {
            y[i][j] = y[i + 1][j - 1] - y[i][j - 1];
        }
    }

    // ---------- Display the Table ----------
    cout << "\nFINITE DIFFERENCE TABLE:\n";
    cout << "---------------------------------------------\n";
    cout << "x\tf(x)";
    for (int j = 1; j < n; j++)
        cout << "\tÎ”^" << j << "f";
    cout << "\n---------------------------------------------\n";

    for (int i = 0; i < n; i++) {
        cout << x[i];
        for (int j = 0; j < n - i; j++)
            cout << "\t" << y[i][j];
        cout << endl;
    }

    return 0;
}
